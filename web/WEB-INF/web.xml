<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Media Manager</display-name>

    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>

    <listener>
      <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
    </listener>

	<servlet>
		<servlet-name>XPServlet</servlet-name>
		<description>Servlet handling .xp files</description>
		<servlet-class>com.kiwisoft.xp.XPServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PDFServlet</servlet-name>
		<description>Servlet for creating PDF documents</description>
		<servlet-class>com.kiwisoft.media.PDFServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MediaFileServlet</servlet-name>
		<description>Streams images and other resources from file system</description>
		<servlet-class>com.kiwisoft.media.pics.MediaFileServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>FileServlet</servlet-name>
		<description>Streams resources from file system</description>
		<servlet-class>com.kiwisoft.media.FileServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>import_imdb</servlet-name>
		<display-name>Import IMDb</display-name>
		<description>Servlet import movie data</description>
		<servlet-class>com.kiwisoft.media.movie.IMDbServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>StartupServlet</servlet-name>
		<display-name>Media Manager Web Application Initializer</display-name>
		<servlet-class>com.kiwisoft.media.web.StartupServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>

    <servlet>
        <servlet-name>BrowserServlet</servlet-name>
        <servlet-class>com.kiwisoft.media.web.BrowserServlet</servlet-class>
        <load-on-startup>9</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>XPServlet</servlet-name>
		<url-pattern>*.xp</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PDFServlet</servlet-name>
		<url-pattern>/create.pdf</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>import_imdb</servlet-name>
		<url-pattern>/movies/import_imdb</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MediaFileServlet</servlet-name>
		<url-pattern>/file/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MediaFileServlet</servlet-name>
		<url-pattern>/mediafile/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FileServlet</servlet-name>
		<url-pattern>/res/*</url-pattern>
	</servlet-mapping>

	<taglib>
		<taglib-uri>http://www.kiwisoft.de/media/xp</taglib-uri>
		<taglib-location>/WEB-INF/xp.tld</taglib-location>
	</taglib>
</web-app>
