<?xml version="1.0" ?>

<project name="MediaLib - Properties">

	<property name="root.dir" location="${basedir}"/>
	<property name="lib.dir" location="${root.dir}/lib"/>
	<property name="build.dir" location="${root.dir}/tmp"/>
	<property name="classes.dir" location="${build.dir}/classes"/>
	<property name="utils.builds.dir" location="${root.dir}/../utils/builds"/>

	<patternset id="resource.pattern">
		<include name="**/*.jpg"/>
		<include name="**/*.jpeg"/>
		<include name="**/*.png"/>
		<include name="**/*.gif"/>
		<include name="**/*.xml"/>
		<include name="**/*.properties"/>
		<include name="**/*.odtt"/>
		<include name="**/*.dtd"/>
		<include name="**/*.tld"/>
	</patternset>

</project>
